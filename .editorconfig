# EditorConfig - Configuração de encoding para o projeto ALUFORCE
# https://editorconfig.org

root = true

# Configurações globais para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript
[*.js]
charset = utf-8
end_of_line = lf
indent_size = 4

# JSON
[*.json]
charset = utf-8
end_of_line = lf
indent_size = 2

# HTML
[*.html]
charset = utf-8
end_of_line = lf
indent_size = 4

# CSS
[*.css]
charset = utf-8
end_of_line = lf
indent_size = 4

# SQL
[*.sql]
charset = utf-8
end_of_line = lf
indent_size = 4

# PowerShell
[*.ps1]
charset = utf-8
end_of_line = crlf
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false

# Package files
[{package.json,package-lock.json}]
indent_size = 2
