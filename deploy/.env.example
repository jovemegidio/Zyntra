# Servidor
NODE_ENV=production
PORT=3000

# Banco de Dados MySQL (Railway)
DB_HOST=interchange.proxy.rlwy.net
DB_PORT=19396
DB_USER=root
DB_PASSWORD=COLOQUE_SUA_SENHA_AQUI
DB_NAME=railway

# JWT Secret (gere um novo para produção)
JWT_SECRET=GERE_UMA_CHAVE_SECRETA_AQUI

# SMTP para envio de emails (opcional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=seu-email@gmail.com
# SMTP_PASS=sua-senha-de-app

# Upload de arquivos
MAX_FILE_SIZE=100MB
UPLOAD_DIR=uploads

# Logs
LOG_LEVEL=info
