# Environment configuration for Aluforce ERP
# Copy to .env and fill values

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=aluforce_vendas
DB_USER=aluforce_user
DB_PASSWORD=CHANGE_ME

# Security
JWT_SECRET=CHANGE_ME
SESSION_SECRET=CHANGE_ME

# NFe/NFS-e
CERT_PATH=./secrets/certificado_a1.pfx
CERT_PASSWORD=CHANGE_ME
SEFAZ_AMBIENTE=producao # ou homologacao

# CNAB/Banking
BANCO_CODIGO=001
CONVENIO=CHANGE_ME
CARTEIRA=CHANGE_ME

# App
BASE_URL=http://localhost:3000
NODE_ENV=development

# Discord Bot - Notificações de Atualizações
# 1. Crie um bot em https://discord.com/developers/applications
# 2. Copie o token do bot
# 3. Convide o bot para seu servidor com permissão de enviar mensagens
# 4. (Opcional) Crie um webhook no canal #atualizações
DISCORD_BOT_ENABLED=false
DISCORD_BOT_TOKEN=CHANGE_ME
DISCORD_GUILD_ID=
DISCORD_CHANNEL_ATUALIZACOES=
DISCORD_CHANNEL_NAME=atualizações
DISCORD_WEBHOOK_ATUALIZACOES=
DISCORD_WEBHOOK_URL=
DISCORD_NOTIFICATIONS_ENABLED=false
