{
    "name":  "aluforce-sistema",
    "version":  "2.1.7",
    "description":  "Sistema de GestÃ£o Empresarial ALUFORCE - Dashboard Unificado",
    "main":  "electron/main.js",
    "author":  "ALUFORCE Team",
    "license":  "UNLICENSED",
    "private":  true,
    "engines":  {
                    "node":  "\u003e=18.0.0",
                    "npm":  "\u003e=8.0.0"
                },
    "scripts":  {
                    "dev":  "nodemon server.js --ignore uploads/ --ignore logs/",
                    "start":  "electron .",
                    "start:server":  "node server.js",
                    "start:desktop":  "electron .",
                    "build:win":  "electron-builder --win --x64",
                    "build:installer":  "electron-builder --win nsis --x64",
                    "build:portable":  "electron-builder --win portable --x64",
                    "start:dev":  "cross-env NODE_ENV=development nodemon server.js",
                    "start:mock":  "cross-env DEV_MOCK=true nodemon server.js",
                    "start:prod":  "cross-env NODE_ENV=production node server.js",
                    "build":  "npm run build:css \u0026\u0026 npm run build:js",
                    "build:css":  "postcss style.css -o dist/style.min.css --map",
                    "build:js":  "terser script.js -o dist/script.min.js --source-map",
                    "test":  "node --test tests/*.test.js",
                    "test:unit":  "node --test tests/validation.test.js tests/database.test.js",
                    "test:api":  "node --test tests/api.test.js",
                    "test:mocha":  "mocha tests/mocha --timeout 10000 --recursive",
                    "test:watch":  "npm run test -- --watch",
                    "test:coverage":  "nyc --reporter=lcov --reporter=text npm run test:mocha",
                    "test:e2e":  "playwright test",
                    "test:excel":  "node teste-gerador-direto.js",
                    "test:api":  "node teste-api-final.js",
                    "lint":  "eslint . --ext .js --fix",
                    "lint:check":  "eslint . --ext .js",
                    "format":  "prettier --write \"**/*.{js,json,css,html}\"",
                    "security":  "npm audit --audit-level moderate",
                    "setup":  "node scripts/setup.js",
                    "setup:prod":  "node scripts/setup-production.js",
                    "db:migrate":  "node scripts/migrate.js",
                    "db:seed":  "node scripts/seed.js",
                    "db:backup":  "node scripts/backup-database.js",
                    "logs":  "tail -f logs/app.log",
                    "logs:error":  "tail -f logs/error.log",
                    "logs:monitor":  "tail -f logs/monitoring-report.json",
                    "clean":  "rimraf dist/ logs/ coverage/ .nyc_output/",
                    "health":  "node scripts/health-check.js",
                    "monitor":  "node scripts/monitor.js",
                    "monitor:start":  "pm2 start scripts/monitor.js --name aluforce-monitor",
                    "monitor:stop":  "pm2 stop aluforce-monitor",
                    "pm2:start":  "pm2 start ecosystem.config.js",
                    "pm2:start:prod":  "pm2 start ecosystem.production.config.js --env production",
                    "pm2:restart":  "pm2 restart ecosystem.config.js",
                    "pm2:stop":  "pm2 stop ecosystem.config.js",
                    "pm2:delete":  "pm2 delete ecosystem.config.js",
                    "pm2:logs":  "pm2 logs aluforce-v2-production",
                    "pm2:monit":  "pm2 monit",
                    "sync:vps":  "node auto-sync-vps.js",
                    "sync:start":  "pm2 start auto-sync-vps.js --name aluforce-sync",
                    "sync:stop":  "pm2 stop aluforce-sync",
                    "sync:restart":  "pm2 restart aluforce-sync",
                    "sync:logs":  "pm2 logs aluforce-sync",
                    "deploy:staging":  "npm run build \u0026\u0026 npm run test \u0026\u0026 pm2 deploy ecosystem.production.config.js staging",
                    "deploy:production":  "npm run build \u0026\u0026 npm run test \u0026\u0026 pm2 deploy ecosystem.production.config.js production",
                    "backup:create":  "node scripts/backup-database.js \u0026\u0026 tar -czf backup-$(date +%Y%m%d_%H%M%S).tar.gz logs/ uploads/ modules/",
                    "backup:restore":  "node scripts/restore-database.js",
                    "excel:test":  "node teste-gerador-direto.js",
                    "excel:validate":  "node scripts/validate-templates.js",
                    "precommit":  "npm run lint:check \u0026\u0026 npm run test",
                    "setup:first-time":  "node scripts/setup.js",
                    "db:optimize":  "node scripts/otimizar-banco.js",
                    "discord:hook:install":  "node scripts/install-git-hook.js",
                    "discord:test":  "node -e \"const bot = require('./services/discord-bot'); bot.init().then(() => setTimeout(() => bot.publicarAtualizacao({tipo:'improvement',titulo:'Teste de Conexão',descricao:'Bot funcionando!',modulo:'Sistema'}).then(() => process.exit(0)), 3000))\""
                },
    "dependencies":  {
                         "@aws-sdk/client-s3":  "^3.540.0",
                         "@capacitor/android":  "^8.0.0",
                         "@capacitor/app":  "^8.0.0",
                         "@capacitor/camera":  "^8.0.0",
                         "@capacitor/cli":  "^8.0.0",
                         "@capacitor/core":  "^8.0.0",
                         "@capacitor/filesystem":  "^8.0.0",
                         "@capacitor/network":  "^8.0.0",
                         "@capacitor/splash-screen":  "^8.0.0",
                         "@capacitor/status-bar":  "^8.0.0",
                         "axios":  "^1.6.2",
                         "bcrypt":  "^5.1.1",
                         "bcryptjs":  "^2.4.3",
                         "canvas":  "^3.2.0",
                         "chokidar":  "^4.0.3",
                         "compression":  "^1.7.4",
                         "cookie-parser":  "^1.4.6",
                         "cors":  "^2.8.5",
                         "discord.js":  "^14.14.1",
                         "dotenv":  "^16.6.1",
                         "exceljs":  "^4.4.0",
                         "express":  "^4.18.2",
                         "express-rate-limit":  "^6.11.2",
                         "express-session":  "^1.17.3",
                         "express-validator":  "^7.0.1",
                         "helmet":  "^7.2.0",
                         "joi":  "^17.11.0",
                         "jsbarcode":  "^3.12.3",
                         "jsonwebtoken":  "^9.0.2",
                         "moment-timezone":  "^0.5.43",
                         "multer":  "^1.4.5-lts.1",
                         "mysql2":  "^3.6.5",
                         "node-cron":  "^3.0.3",
                         "node-forge":  "^1.3.1",
                         "nodemailer":  "^7.0.10",
                         "pdf-lib":  "^1.17.1",
                         "pdf-parse":  "^2.4.5",
                         "pdfkit":  "^0.17.2",
                         "printer":  "^0.4.0",
                         "puppeteer":  "^21.11.0",
                         "qrcode":  "^1.5.4",
                         "redis":  "^4.7.0",
                         "setimmediate":  "^1.0.5",
                         "sharp":  "^0.33.0",
                         "soap":  "^1.0.0",
                         "@socket.io/redis-adapter":  "^8.3.0",
                         "socket.io":  "^4.7.4",
                         "uuid":  "^9.0.1",
                         "validator":  "^13.15.26",
                         "winston":  "^3.11.0",
                         "xlsx":  "^0.18.5",
                         "xml2js":  "^0.6.2",
                         "xmlbuilder2":  "^4.0.3",
                         "xmldom":  "^0.6.0"
                     },
    "devDependencies":  {
                            "@playwright/test":  "^1.57.0",
                            "autoprefixer":  "^10.4.16",
                            "chai":  "^4.5.0",
                            "cross-env":  "^7.0.3",
                            "cssnano":  "^6.0.2",
                            "electron":  "^28.0.0",
                            "electron-builder":  "^24.9.1",
                            "eslint":  "^8.55.0",
                            "eslint-config-prettier":  "^9.1.0",
                            "icon-gen":  "^5.0.0",
                            "jsdom":  "^27.4.0",
                            "mocha":  "^10.8.2",
                            "nodemon":  "^3.0.2",
                            "nyc":  "^15.1.0",
                            "pm2":  "^6.0.13",
                            "postcss":  "^8.4.32",
                            "postcss-cli":  "^11.0.0",
                            "prettier":  "^3.1.1",
                            "rimraf":  "^5.0.5",
                            "sinon":  "^21.0.1",
                            "sqlite3":  "^5.1.7",
                            "supertest":  "^6.3.4",
                            "terser":  "^5.26.0"
                        },
    "build":  {
                  "appId":  "com.aluforce.sistema",
                  "productName":  "Aluforce Sistema",
                  "copyright":  "Copyright Â© 2025 ALUFORCE",
                  "npmRebuild":  false,
                  "asar":  true,
                  "directories":  {
                                      "output":  "dist-electron",
                                      "buildResources":  "assets"
                                  },
                  "files":  [
                                "server.js",
                                "package.json",
                                ".env",
                                ".env.example",
                                "LICENSE.txt",
                                "electron/**/*",
                                "public/**/*",
                                "modules/**/*",
                                "src/**/*",
                                "chat/**/*",
                                "routes/**/*",
                                "middleware/**/*",
                                "scripts/**/*",
                                "cron_jobs_estoque.js",
                                "Sistema de Chat/**/*",
                                "Sistema de Suporte/**/*",
                                "Ajuda - Aluforce/**/*",
                                "node_modules/**/*",
                                "!**/*.md",
                                "!**/*.log",
                                "!**/*.sql",
                                "!**/*.bat",
                                "!**/*.ps1",
                                "!**/*.vbs",
                                "!**/tests/**",
                                "!**/test/**",
                                "!**/*.map",
                                "!**/node_modules/.cache/**",
                                "!**/node_modules/**/test/**",
                                "!**/node_modules/**/tests/**",
                                "!**/node_modules/**/*.md",
                                "!**/node_modules/**/*.ts",
                                "!**/node_modules/**/.github/**",
                                "!**/.git/**",
                                "!**/ANALISE_*.json",
                                "!**/ANALISE_*.md",
                                "!**/backup*.sql",
                                "!**/exceljs-real/**",
                                "!**/dist/**",
                                "!**/dist-electron/**"
                            ],
                  "extraResources":  [
                                         {
                                             "from":  "assets/",
                                             "to":  "assets/",
                                             "filter":  [
                                                            "**/*"
                                                        ]
                                         }
                                     ],
                  "win":  {
                              "target":  [
                                             {
                                                 "target":  "nsis",
                                                 "arch":  [
                                                              "x64"
                                                          ]
                                             },
                                             {
                                                 "target":  "portable",
                                                 "arch":  [
                                                              "x64"
                                                          ]
                                             }
                                         ],
                              "icon":  "assets/icon.ico",
                              "publisherName":  "ALUFORCE"
                          },
                  "nsis":  {
                               "oneClick":  false,
                               "allowToChangeInstallationDirectory":  true,
                               "allowElevation":  true,
                               "createDesktopShortcut":  "always",
                               "createStartMenuShortcut":  true,
                               "shortcutName":  "Aluforce Sistema",
                               "installerIcon":  "assets/icon.ico",
                               "uninstallerIcon":  "assets/icon.ico",
                               "installerHeaderIcon":  "assets/icon.ico",
                               "menuCategory":  "Aluforce",
                               "license":  "LICENSE.txt",
                               "perMachine":  false,
                               "deleteAppDataOnUninstall":  false,
                               "runAfterFinish":  true,
                               "language":  "1046"
                           },
                  "portable":  {
                                   "artifactName":  "Aluforce-Sistema-${version}-Portable.exe"
                               }
              }
}
