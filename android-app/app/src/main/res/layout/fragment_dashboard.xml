<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.dashboard.DashboardFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <!-- Header -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md">

                <TextView
                    android:id="@+id/tvDashboardTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/dashboard_title"
                    android:textAppearance="@style/TextAppearance.Aluforce.Headline"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/badgeContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Notification Badge -->
                <FrameLayout
                    android:id="@+id/badgeContainer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/nav_notificacoes"
                        android:src="@drawable/ic_notifications"
                        app:tint="@color/on_surface" />

                    <TextView
                        android:id="@+id/tvNotificationBadge"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/bg_badge"
                        android:gravity="center"
                        android:textColor="@color/text_on_primary"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:text="3"
                        tools:visibility="visible" />

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Period Chips -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@id/chipDay"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/period_day" />

                <com.google.android.material.chip.Chip
                    android:id="@id/chipWeek"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/period_week" />

                <com.google.android.material.chip.Chip
                    android:id="@id/chipMonth"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/period_month" />

                <com.google.android.material.chip.Chip
                    android:id="@id/chipYear"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/period_year" />

            </com.google.android.material.chip.ChipGroup>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_xl"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- KPI Container -->
            <LinearLayout
                android:id="@+id/kpiContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- ====== VENDAS SECTION ====== -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    android:text="Vendas"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_lg"
                    app:columnCount="2"
                    app:useDefaultMargins="true">

                    <!-- Total Pedidos -->
                    <com.google.android.material.card.MaterialCardView
                        style="@style/Widget.Aluforce.KpiCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/card_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kpi_pedidos"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiLabel" />

                            <TextView
                                android:id="@+id/tvTotalPedidos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiValue"
                                tools:text="142" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Valor Vendas -->
                    <com.google.android.material.card.MaterialCardView
                        style="@style/Widget.Aluforce.KpiCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/card_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kpi_valor_vendas"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiLabel" />

                            <TextView
                                android:id="@+id/tvValorVendas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiValue"
                                tools:text="R$ 1.2M" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Ticket Medio -->
                    <com.google.android.material.card.MaterialCardView
                        style="@style/Widget.Aluforce.KpiCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/card_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kpi_ticket_medio"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiLabel" />

                            <TextView
                                android:id="@+id/tvTicketMedio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiValue"
                                tools:text="R$ 8.450" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Pendentes -->
                    <com.google.android.material.card.MaterialCardView
                        style="@style/Widget.Aluforce.KpiCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/card_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kpi_pendentes"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiLabel" />

                            <TextView
                                android:id="@+id/tvPendentes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiValue"
                                android:textColor="@color/warning"
                                tools:text="12" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.gridlayout.widget.GridLayout>

                <!-- Crescimento -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.Aluforce.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_lg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/card_padding">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Crescimento"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvCrescimento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="+15.3%"
                            tools:textColor="@color/success" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- ====== FINANCEIRO SECTION ====== -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    android:text="Financeiro"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_lg"
                    app:columnCount="2"
                    app:useDefaultMargins="true">

                    <!-- Receitas -->
                    <com.google.android.material.card.MaterialCardView
                        style="@style/Widget.Aluforce.KpiCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/card_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kpi_receitas"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiLabel" />

                            <TextView
                                android:id="@+id/tvReceitas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiValue"
                                android:textColor="@color/success"
                                tools:text="R$ 850K" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Despesas -->
                    <com.google.android.material.card.MaterialCardView
                        style="@style/Widget.Aluforce.KpiCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/card_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kpi_despesas"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiLabel" />

                            <TextView
                                android:id="@+id/tvDespesas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiValue"
                                android:textColor="@color/error"
                                tools:text="R$ 620K" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.gridlayout.widget.GridLayout>

                <!-- Saldo -->
                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.Aluforce.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_lg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="@dimen/card_padding">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/kpi_saldo"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvSaldo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="R$ 230K"
                            tools:textColor="@color/success" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- ====== PRODUÇÃO SECTION ====== -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    android:text="Produção"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_lg"
                    app:columnCount="3"
                    app:useDefaultMargins="true">

                    <!-- Ordens Ativas -->
                    <com.google.android.material.card.MaterialCardView
                        style="@style/Widget.Aluforce.KpiCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_sm">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kpi_ordens_ativas"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiLabel"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tvOrdensAtivas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiValue"
                                android:textSize="20sp"
                                tools:text="28" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Atrasadas -->
                    <com.google.android.material.card.MaterialCardView
                        style="@style/Widget.Aluforce.KpiCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_sm">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kpi_ordens_atrasadas"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiLabel"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tvOrdensAtrasadas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiValue"
                                android:textColor="@color/error"
                                android:textSize="20sp"
                                tools:text="3" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Eficiência -->
                    <com.google.android.material.card.MaterialCardView
                        style="@style/Widget.Aluforce.KpiCard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_columnWeight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_sm">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kpi_eficiencia"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiLabel"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tvEficiencia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:textAppearance="@style/TextAppearance.Aluforce.KpiValue"
                                android:textColor="@color/primary"
                                android:textSize="20sp"
                                tools:text="87.5%" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.gridlayout.widget.GridLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
