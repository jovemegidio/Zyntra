/* ================================================
   ALUFORCE CHAT WIDGET — Estilos
   Widget flutuante estilo Intercom/Tidio
   Suporte a modo claro e escuro
   ================================================ */

/* ========== TEMA CLARO (padrão) ========== */
:root {
  --afw-primary: #0088cc;
  --afw-primary-dark: #006da3;
  --afw-primary-light: #e3f2fd;
  --afw-gradient: linear-gradient(135deg, #0088cc 0%, #00b4d8 100%);
  --afw-bg: #ffffff;
  --afw-bg-alt: #f5f7fb;
  --afw-bg-dark: #0e1621;
  --afw-text: #1a1a2e;
  --afw-text-secondary: #6b7280;
  --afw-text-muted: #9ca3af;
  --afw-border: #e5e7eb;
  --afw-msg-sent: #0088cc;
  --afw-msg-received: #f0f2f5;
  --afw-msg-received-text: #1a1a2e;
  --afw-shadow: 0 5px 40px rgba(0,0,0,0.16);
  --afw-shadow-fab: 0 4px 24px rgba(0,136,204,0.35);
  --afw-radius: 16px;
  --afw-radius-sm: 10px;
  --afw-font: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  --afw-input-bg: #ffffff;
  --afw-brand-bg: #ffffff;
  --afw-brand-border: #e5e7eb;
  --afw-support-bg: #ffffff;
  --afw-emoji-bg: #ffffff;
  --afw-audio-bar-bg: #ffffff;
  --afw-tooltip-bg: #ffffff;
  --afw-notif-bg: #ffffff;
  --afw-modal-overlay: rgba(0,0,0,0.8);
  --afw-scrollbar: rgba(0,0,0,0.1);
}

/* ========== TEMA ESCURO ========== */
.afw-dark {
  --afw-primary: #0099e6;
  --afw-primary-dark: #007acc;
  --afw-primary-light: #1a2d42;
  --afw-gradient: linear-gradient(135deg, #0088cc 0%, #00b4d8 100%);
  --afw-bg: #1a1d23;
  --afw-bg-alt: #12151a;
  --afw-bg-dark: #0e1117;
  --afw-text: #e4e6ea;
  --afw-text-secondary: #a0a4ab;
  --afw-text-muted: #6b7280;
  --afw-border: #2d3139;
  --afw-msg-sent: #0077b6;
  --afw-msg-received: #252830;
  --afw-msg-received-text: #e4e6ea;
  --afw-shadow: 0 5px 40px rgba(0,0,0,0.45);
  --afw-shadow-fab: 0 4px 24px rgba(0,136,204,0.3);
  --afw-input-bg: #1e2127;
  --afw-brand-bg: #1a1d23;
  --afw-brand-border: #2d3139;
  --afw-support-bg: #1e2127;
  --afw-emoji-bg: #1e2127;
  --afw-audio-bar-bg: #1e2127;
  --afw-tooltip-bg: #252830;
  --afw-notif-bg: #252830;
  --afw-modal-overlay: rgba(0,0,0,0.9);
  --afw-scrollbar: rgba(255,255,255,0.08);
}

/* Reset escopado APENAS ao widget — não afeta a página */
#aluforce-widget *, #aluforce-widget *::before, #aluforce-widget *::after,
.afw-modal *, .afw-modal *::before, .afw-modal *::after,
.afw-notif *, .afw-notif *::before, .afw-notif *::after {
  margin: 0; padding: 0; box-sizing: border-box;
}
#aluforce-widget .hidden,
.afw-modal.hidden, .afw-modal .hidden,
.afw-notif.hidden, .afw-notif .hidden { display: none !important; }

/* ========== BRAND BAR (Logo Aluforce) ========== */
.afw-brand-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8px 16px;
  background: var(--afw-brand-bg);
  border-bottom: 1px solid var(--afw-brand-border);
  min-height: 44px;
  flex-shrink: 0;
}

.afw-brand-logo {
  display: flex;
  align-items: center;
  height: 28px;
}

.afw-logo {
  height: 28px;
  width: auto;
  object-fit: contain;
}

.afw-brand-actions {
  display: flex;
  align-items: center;
  gap: 4px;
}

.afw-theme-toggle {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  border: 1.5px solid var(--afw-border);
  background: var(--afw-bg-alt);
  color: var(--afw-text-secondary);
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  transition: all 0.3s ease;
}

.afw-theme-toggle:hover {
  border-color: var(--afw-primary);
  color: var(--afw-primary);
  background: var(--afw-primary-light);
}

/* ========== FAB (Floating Action Button) ========== */
.afw-fab {
  position: fixed !important;
  bottom: 24px !important;
  right: 24px !important;
  left: auto !important;
  top: auto !important;
  width: 64px !important;
  height: 64px !important;
  min-width: 64px !important;
  min-height: 64px !important;
  border-radius: 50% !important;
  background: var(--afw-gradient) !important;
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
  cursor: pointer;
  z-index: 99999 !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  box-shadow: var(--afw-shadow-fab);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden !important;
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
  line-height: 1;
}

.afw-fab:hover {
  transform: scale(1.08);
  box-shadow: 0 6px 32px rgba(0,136,204,0.5);
}

.afw-fab .afw-fab-avatar,
.afw-fab > .afw-fab-avatar,
#afw-fab-img.afw-fab-avatar {
  display: block !important;
  position: relative !important;
  width: 100% !important;
  height: 100% !important;
  max-width: 100% !important;
  max-height: 100% !important;
  object-fit: cover !important;
  object-position: center center !important;
  border-radius: 50% !important;
  margin: 0 !important;
  padding: 0 !important;
  top: auto !important;
  left: auto !important;
  right: auto !important;
  bottom: auto !important;
  float: none !important;
  transform: none;
  transition: all 0.3s ease;
}

.afw-fab-close {
  position: absolute;
  color: white;
  font-size: 22px;
  opacity: 0;
  transform: rotate(-90deg) scale(0);
  transition: all 0.3s ease;
}

.afw-fab.open .afw-fab-avatar,
.afw-fab.open > .afw-fab-avatar,
.afw-fab.open #afw-fab-img.afw-fab-avatar { opacity: 0 !important; transform: scale(0) rotate(90deg) !important; }
.afw-fab.open .afw-fab-close { opacity: 1; transform: rotate(0) scale(1); }

.afw-fab-badge {
  position: absolute;
  top: -4px;
  right: -4px;
  background: #ef4444;
  color: white;
  font-size: 11px;
  font-weight: 700;
  min-width: 22px;
  height: 22px;
  border-radius: 11px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px solid white;
  font-family: var(--afw-font);
}

.afw-fab-pulse {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: var(--afw-primary);
  opacity: 0;
  animation: afwPulse 2s ease-out infinite;
  pointer-events: none;
}

.afw-fab.open .afw-fab-pulse { display: none; }

@keyframes afwPulse {
  0% { transform: scale(1); opacity: 0.4; }
  100% { transform: scale(1.8); opacity: 0; }
}

/* ========== TOOLTIP ========== */
.afw-tooltip {
  position: fixed;
  bottom: 100px;
  right: 24px;
  background: var(--afw-tooltip-bg);
  border: 1px solid var(--afw-border);
  border-radius: 12px;
  padding: 12px 16px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.12);
  z-index: 99998;
  font-family: var(--afw-font);
  font-size: 14px;
  color: var(--afw-text);
  display: flex;
  align-items: center;
  gap: 10px;
  animation: afwSlideUp 0.4s ease;
  max-width: 240px;
}

.afw-tooltip p { line-height: 1.4; }

.afw-tooltip-close {
  background: none;
  border: none;
  color: var(--afw-text-muted);
  cursor: pointer;
  font-size: 12px;
  padding: 4px;
}

@keyframes afwSlideUp {
  from { opacity: 0; transform: translateY(12px); }
  to { opacity: 1; transform: translateY(0); }
}

/* ========== JANELA DO CHAT ========== */
.afw-window {
  position: fixed;
  bottom: 100px;
  right: 24px;
  width: 400px;
  height: 640px;
  max-height: calc(100vh - 130px);
  border-radius: 20px;
  overflow: hidden;
  box-shadow: var(--afw-shadow);
  z-index: 99999;
  font-family: var(--afw-font);
  display: flex;
  flex-direction: column;
  background: var(--afw-bg);
  animation: afwWindowOpen 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  transform-origin: bottom right;
}

@keyframes afwWindowOpen {
  from { opacity: 0; transform: scale(0.85) translateY(20px); }
  to { opacity: 1; transform: scale(1) translateY(0); }
}

/* ========== WELCOME SCREEN ========== */
.afw-welcome {
  display: flex;
  flex-direction: column;
  flex: 1;
  overflow: hidden;
}

.afw-welcome-header {
  position: relative;
  padding: 20px 24px 18px;
  background: var(--afw-gradient);
  color: white;
  text-align: center;
  overflow: hidden;
  flex-shrink: 0;
}

.afw-welcome-bg {
  position: absolute;
  top: -50%;
  left: -20%;
  width: 140%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.08) 0%, transparent 70%);
  animation: afwBgFloat 6s ease-in-out infinite;
}

@keyframes afwBgFloat {
  0%, 100% { transform: translate(0, 0); }
  50% { transform: translate(20px, -20px); }
}

.afw-welcome-content { position: relative; z-index: 1; }

.afw-welcome-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  object-fit: cover;
  border: 3px solid rgba(255,255,255,0.3);
  margin-bottom: 8px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.2);
}

.afw-welcome-header h2 { font-size: 20px; font-weight: 700; margin-bottom: 4px; }
.afw-welcome-header p { font-size: 13px; opacity: 0.9; line-height: 1.4; }

.afw-welcome-body {
  flex: 1;
  padding: 20px 22px;
  overflow-y: auto;
  background: var(--afw-bg);
  min-height: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.afw-login-form { margin-bottom: 18px; }

.afw-input-group {
  position: relative;
  margin-bottom: 12px;
}

.afw-input-group i {
  position: absolute;
  left: 14px;
  top: 50%;
  transform: translateY(-50%);
  color: var(--afw-text-muted);
  font-size: 13px;
  pointer-events: none;
}

.afw-input-group input {
  width: 100%;
  padding: 11px 14px 11px 38px;
  border: 1.5px solid var(--afw-border);
  border-radius: var(--afw-radius-sm);
  font-size: 14px;
  font-family: var(--afw-font);
  color: var(--afw-text);
  background: var(--afw-input-bg);
  transition: all 0.2s;
  box-sizing: border-box;
}

.afw-input-group input:focus {
  outline: none;
  border-color: var(--afw-primary);
  box-shadow: 0 0 0 3px rgba(0,136,204,0.1);
}

.afw-input-group input::placeholder { color: var(--afw-text-muted); }

.afw-btn-start {
  width: 100%;
  padding: 11px 16px;
  background: var(--afw-gradient);
  color: white;
  border: none;
  border-radius: var(--afw-radius-sm);
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  font-family: var(--afw-font);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  transition: all 0.2s;
}

.afw-btn-start:hover { box-shadow: 0 4px 16px rgba(0,136,204,0.35); transform: translateY(-1px); }

.afw-quick-label {
  font-size: 10px;
  color: var(--afw-text-muted);
  text-transform: uppercase;
  letter-spacing: 0.6px;
  font-weight: 600;
  margin-bottom: 10px;
  margin-top: 2px;
}

.afw-topics-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 8px;
}

.afw-topic {
  padding: 10px 12px;
  background: var(--afw-bg-alt);
  border: 1.5px solid var(--afw-border);
  border-radius: var(--afw-radius-sm);
  font-size: 13px;
  font-family: var(--afw-font);
  color: var(--afw-text);
  cursor: pointer;
  transition: all 0.2s;
  text-align: left;
}

.afw-topic:hover { border-color: var(--afw-primary); background: var(--afw-primary-light); color: var(--afw-primary-dark); }

.afw-welcome-footer, .afw-footer {
  padding: 8px 12px;
  text-align: center;
  font-size: 10.5px;
  letter-spacing: 0.3px;
  color: var(--afw-text-muted);
  border-top: 1px solid var(--afw-border);
  background: var(--afw-bg-alt);
  flex-shrink: 0;
}

.afw-welcome-footer strong, .afw-footer strong {
  color: var(--afw-primary);
  font-weight: 600;
}

/* ========== CHAT SCREEN ========== */
.afw-chat {
  display: flex;
  flex-direction: column;
  flex: 1;
  overflow: hidden;
  background: var(--afw-bg);
}

/* Header */
.afw-header {
  padding: 12px 16px;
  background: var(--afw-gradient);
  color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.afw-header-info {
  display: flex;
  align-items: center;
  gap: 10px;
}

.afw-header-avatar {
  width: 38px;
  height: 38px;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid rgba(255,255,255,0.3);
}

.afw-header h3 { font-size: 15px; font-weight: 600; }

.afw-header-status {
  font-size: 11px;
  opacity: 0.85;
}

.afw-header-status i { font-size: 6px; color: #4caf50; margin-right: 3px; }

.afw-header-actions { display: flex; gap: 4px; }

.afw-header-btn {
  width: 34px;
  height: 34px;
  border-radius: 50%;
  border: none;
  background: rgba(255,255,255,0.15);
  color: white;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  transition: all 0.2s;
}

.afw-header-btn:hover { background: rgba(255,255,255,0.25); }

/* ========== MENSAGENS ========== */
.afw-messages {
  flex: 1;
  overflow-y: auto;
  padding: 14px;
  background: var(--afw-bg-alt);
  scroll-behavior: smooth;
}

.afw-messages-inner { display: flex; flex-direction: column; }

.afw-date-divider {
  text-align: center;
  margin: 10px 0;
}

.afw-date-divider span {
  background: rgba(0,136,204,0.08);
  color: var(--afw-text-muted);
  padding: 3px 12px;
  border-radius: 10px;
  font-size: 11px;
  font-weight: 500;
}

/* Bolhas de Mensagem */
.afw-msg {
  display: flex;
  margin-bottom: 6px;
  animation: afwMsgIn 0.25s ease;
}

@keyframes afwMsgIn {
  from { opacity: 0; transform: translateY(8px); }
  to { opacity: 1; transform: translateY(0); }
}

.afw-msg.sent { justify-content: flex-end; }
.afw-msg.received { justify-content: flex-start; }
.afw-msg.system { justify-content: center; }

.afw-msg-bubble {
  max-width: 80%;
  padding: 10px 14px;
  border-radius: 16px;
  position: relative;
  word-wrap: break-word;
  line-height: 1.45;
  font-size: 14px;
}

.afw-msg.sent .afw-msg-bubble {
  background: var(--afw-msg-sent);
  color: white;
  border-bottom-right-radius: 4px;
}

.afw-msg.received .afw-msg-bubble {
  background: var(--afw-msg-received);
  color: var(--afw-msg-received-text);
  border-bottom-left-radius: 4px;
}

.afw-msg.system .afw-msg-bubble {
  background: rgba(0,136,204,0.08);
  color: var(--afw-text-secondary);
  border-radius: 12px;
  max-width: 90%;
  text-align: center;
  font-size: 13px;
  padding: 8px 16px;
}

.afw-msg-sender {
  font-size: 12px;
  font-weight: 600;
  color: var(--afw-primary);
  margin-bottom: 2px;
  display: flex;
  align-items: center;
  gap: 4px;
}

.afw-msg-sender img {
  width: 14px;
  height: 14px;
  border-radius: 50%;
  object-fit: cover;
}

.afw-msg-text {
  white-space: pre-wrap;
  line-height: 1.5;
}

.afw-msg-text strong { font-weight: 600; }

.afw-msg-text a {
  color: inherit;
  text-decoration: underline;
  text-underline-offset: 2px;
}

.afw-msg.sent .afw-msg-text a { color: rgba(255,255,255,0.9); }
.afw-msg.received .afw-msg-text a { color: var(--afw-primary); }

.afw-msg-meta {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 4px;
  margin-top: 3px;
}

.afw-msg-time {
  font-size: 10px;
  opacity: 0.6;
}

.afw-msg-status { font-size: 12px; opacity: 0.6; }
.afw-msg-status.delivered { opacity: 1; }
.afw-msg.sent .afw-msg-status.delivered { color: rgba(255,255,255,0.9); }

/* Áudio */
.afw-audio-msg {
  display: flex;
  align-items: center;
  gap: 8px;
  min-width: 200px;
}

.afw-audio-play {
  width: 32px;
  height: 32px;
  min-width: 32px;
  border-radius: 50%;
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  transition: all 0.2s;
}

.afw-msg.sent .afw-audio-play { background: rgba(255,255,255,0.2); color: white; }
.afw-msg.received .afw-audio-play { background: var(--afw-gradient); color: white; }

.afw-audio-wave {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 1.5px;
  height: 24px;
}

.afw-audio-wave .bar {
  width: 2.5px;
  border-radius: 2px;
  transition: height 0.1s;
}

.afw-msg.sent .afw-audio-wave .bar { background: rgba(255,255,255,0.5); }
.afw-msg.received .afw-audio-wave .bar { background: var(--afw-text-muted); }

.afw-audio-dur {
  font-size: 11px;
  min-width: 30px;
  opacity: 0.7;
}

/* Imagem */
.afw-msg-image {
  max-width: 240px;
  border-radius: 10px;
  cursor: pointer;
  transition: opacity 0.2s;
}

.afw-msg-image:hover { opacity: 0.9; }

/* Arquivo */
.afw-file-msg {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px;
  border-radius: 8px;
  color: inherit;
}

.afw-msg.sent .afw-file-msg { background: rgba(255,255,255,0.1); }
.afw-msg.received .afw-file-msg { background: rgba(0,0,0,0.03); }

.afw-file-icon {
  width: 36px;
  height: 36px;
  min-width: 36px;
  border-radius: 8px;
  background: var(--afw-gradient);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 15px;
}

.afw-file-info { flex: 1; min-width: 0; }
.afw-file-name { font-size: 13px; font-weight: 500; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
.afw-file-size { font-size: 10px; opacity: 0.6; }

.afw-file-actions {
  display: flex;
  gap: 4px;
}

.afw-file-action-btn {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  border: none;
  background: rgba(0,0,0,0.06);
  color: var(--afw-text);
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  transition: all 0.2s;
  text-decoration: none;
}

.afw-file-action-btn:hover { background: var(--afw-gradient); color: white; }
.afw-msg.sent .afw-file-action-btn { background: rgba(255,255,255,0.15); color: white; }
.afw-msg.sent .afw-file-action-btn:hover { background: rgba(255,255,255,0.3); }

/* PDF Inline Preview */
.afw-pdf-inline-preview {
  margin-top: 6px;
  border-radius: 8px;
  overflow: hidden;
  border: 1px solid var(--afw-border);
}

.afw-pdf-inline-preview iframe {
  width: 100%;
  height: 180px;
  border: none;
  border-radius: 8px;
  background: white;
}

/* ========== ATTACH MENU ========== */
.afw-attach-menu {
  position: absolute;
  bottom: 52px;
  left: 40px;
  background: var(--afw-bg-main);
  border: 1px solid var(--afw-border);
  border-radius: 12px;
  box-shadow: 0 6px 24px rgba(0,0,0,0.15);
  z-index: 100;
  overflow: hidden;
  animation: afwSlideUp 0.2s ease;
}

@keyframes afwSlideUp {
  from { opacity: 0; transform: translateY(8px); }
  to { opacity: 1; transform: translateY(0); }
}

.afw-attach-option {
  display: flex;
  align-items: center;
  gap: 10px;
  width: 100%;
  padding: 10px 16px;
  border: none;
  background: none;
  color: var(--afw-text);
  font-size: 13px;
  font-family: inherit;
  cursor: pointer;
  transition: background 0.15s;
  white-space: nowrap;
}

.afw-attach-option:hover { background: var(--afw-bg-alt); }
.afw-attach-option i { width: 18px; text-align: center; color: var(--afw-accent); font-size: 14px; }

/* ========== SCREENSHOT PREVIEW ========== */
.afw-screenshot-preview {
  position: absolute;
  inset: 0;
  background: var(--afw-bg-main);
  z-index: 50;
  display: flex;
  flex-direction: column;
  animation: afwFadeIn 0.25s ease;
}

@keyframes afwFadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.afw-screenshot-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 14px;
  border-bottom: 1px solid var(--afw-border);
  font-size: 13px;
  font-weight: 600;
  color: var(--afw-text);
}

.afw-screenshot-header i { margin-right: 6px; color: var(--afw-accent); }

.afw-screenshot-actions { display: flex; gap: 6px; }

.afw-screenshot-btn {
  padding: 6px 14px;
  border: none;
  border-radius: 8px;
  font-size: 12px;
  font-family: inherit;
  font-weight: 500;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 5px;
  transition: all 0.2s;
}

.afw-screenshot-btn.cancel {
  background: var(--afw-bg-alt);
  color: var(--afw-text);
}

.afw-screenshot-btn.cancel:hover { background: #ff4444; color: white; }

.afw-screenshot-btn.send {
  background: var(--afw-gradient);
  color: white;
}

.afw-screenshot-btn.send:hover { opacity: 0.9; }
.afw-screenshot-btn.send:disabled { opacity: 0.6; cursor: not-allowed; }

.afw-screenshot-img-wrap {
  flex: 1;
  overflow: auto;
  padding: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--afw-bg-alt);
}

.afw-screenshot-img-wrap img {
  max-width: 100%;
  max-height: 100%;
  border-radius: 8px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.15);
}

/* ========== TYPING ========== */
.afw-typing {
  padding: 6px 14px;
  display: flex;
  align-items: center;
  gap: 8px;
  background: var(--afw-bg-alt);
}

.afw-typing-avatar {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  object-fit: cover;
}

.afw-typing-dots {
  display: flex;
  gap: 3px;
}

.afw-typing-dots span {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: var(--afw-text-muted);
  animation: afwBounce 1.4s ease-in-out infinite;
}

.afw-typing-dots span:nth-child(2) { animation-delay: 0.2s; }
.afw-typing-dots span:nth-child(3) { animation-delay: 0.4s; }

@keyframes afwBounce {
  0%, 60%, 100% { transform: translateY(0); }
  30% { transform: translateY(-5px); }
}

/* ========== SUPPORT BAR ========== */
.afw-support-bar {
  padding: 10px 14px;
  background: var(--afw-support-bg);
  border-top: 1px solid var(--afw-border);
  animation: afwMsgIn 0.3s ease;
}

.afw-support-bar p {
  font-size: 13px;
  color: var(--afw-text-secondary);
  margin-bottom: 8px;
  text-align: center;
}

.afw-support-actions {
  display: flex;
  gap: 8px;
  justify-content: center;
}

.afw-btn-no {
  padding: 7px 16px;
  border: 1px solid var(--afw-border);
  border-radius: 8px;
  background: var(--afw-input-bg);
  color: var(--afw-text-secondary);
  font-size: 13px;
  cursor: pointer;
  font-family: var(--afw-font);
  transition: all 0.2s;
}

.afw-btn-no:hover { background: var(--afw-bg-alt); }

.afw-btn-yes {
  padding: 7px 16px;
  border: none;
  border-radius: 8px;
  background: var(--afw-gradient);
  color: white;
  font-size: 13px;
  font-weight: 600;
  cursor: pointer;
  font-family: var(--afw-font);
  display: flex;
  align-items: center;
  gap: 6px;
  transition: all 0.2s;
}

.afw-btn-yes:hover { box-shadow: 0 2px 10px rgba(0,136,204,0.3); }

/* ========== AUDIO RECORDING BAR ========== */
.afw-audio-bar {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 8px 14px;
  background: var(--afw-audio-bar-bg);
  border-top: 1px solid var(--afw-border);
}

.afw-audio-cancel, .afw-audio-send {
  width: 34px;
  height: 34px;
  border-radius: 50%;
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  transition: all 0.2s;
}

.afw-audio-cancel { background: #fef2f2; color: #ef4444; }
.afw-audio-cancel:hover { background: #fee2e2; }
.afw-audio-send { background: var(--afw-gradient); color: white; }
.afw-audio-send:hover { box-shadow: 0 2px 8px rgba(0,136,204,0.3); }

.afw-audio-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 10px;
}

.afw-rec-dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background: #ef4444;
  animation: afwRecPulse 1s ease-in-out infinite;
}

@keyframes afwRecPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.3; }
}

.afw-rec-time {
  font-size: 15px;
  font-weight: 500;
  color: var(--afw-text);
  font-variant-numeric: tabular-nums;
}

/* ========== INPUT BAR ========== */
.afw-input {
  display: flex;
  align-items: flex-end;
  gap: 6px;
  padding: 10px 12px;
  background: var(--afw-bg);
  border-top: 1px solid var(--afw-border);
}

.afw-input-btn {
  width: 36px;
  height: 36px;
  min-width: 36px;
  border-radius: 50%;
  border: none;
  background: transparent;
  color: var(--afw-text-muted);
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  transition: all 0.2s;
}

.afw-input-btn:hover { color: var(--afw-primary); background: var(--afw-primary-light); }

.afw-btn-send {
  color: #ffffff;
  background: var(--afw-gradient);
  box-shadow: 0 2px 8px rgba(0,136,204,0.3);
}
.afw-btn-send:hover {
  color: #ffffff !important;
  background: var(--afw-gradient) !important;
  transform: scale(1.08);
  box-shadow: 0 3px 12px rgba(0,136,204,0.45);
}
.afw-btn-mic.recording { color: #ef4444; animation: afwRecPulse 1s ease-in-out infinite; }

#afw-msg-input {
  flex: 1;
  padding: 9px 14px;
  border: 1.5px solid var(--afw-border);
  border-radius: 20px;
  font-size: 14px;
  font-family: var(--afw-font);
  color: var(--afw-text);
  resize: none;
  max-height: 100px;
  line-height: 1.4;
  background: var(--afw-input-bg);
  transition: border-color 0.2s ease, box-shadow 0.2s ease;
}

#afw-msg-input:focus {
  outline: none;
  border-color: var(--afw-primary);
  box-shadow: 0 0 0 3px rgba(0,136,204,0.1);
}
#afw-msg-input::placeholder { color: var(--afw-text-muted); }

/* ========== EMOJI PICKER ========== */
.afw-emoji-picker {
  padding: 8px;
  background: var(--afw-emoji-bg);
  border-top: 1px solid var(--afw-border);
  max-height: 180px;
  overflow-y: auto;
}

.afw-emoji-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 2px;
}

.afw-emoji-item {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  cursor: pointer;
  border-radius: 6px;
  transition: all 0.15s;
}

.afw-emoji-item:hover { background: var(--afw-bg-alt); transform: scale(1.2); }

/* ========== MODAL (Enhanced: Image + PDF + Zoom) ========== */
.afw-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100000;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.afw-modal-bg {
  position: absolute;
  inset: 0;
  background: var(--afw-modal-overlay);
}

.afw-modal-body {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 95vw;
  max-height: 95vh;
}

.afw-modal-toolbar {
  display: flex;
  gap: 6px;
  margin-bottom: 10px;
  background: rgba(0,0,0,0.5);
  backdrop-filter: blur(10px);
  padding: 6px 10px;
  border-radius: 10px;
}

.afw-modal-btn {
  width: 36px;
  height: 36px;
  border-radius: 8px;
  border: none;
  background: rgba(255,255,255,0.12);
  color: white;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  transition: all 0.2s;
  text-decoration: none;
}

.afw-modal-btn:hover { background: rgba(255,255,255,0.25); }

.afw-modal-content {
  overflow: auto;
  max-width: 90vw;
  max-height: 82vh;
  border-radius: 8px;
}

.afw-modal-content img {
  max-width: 90vw;
  max-height: 80vh;
  border-radius: 8px;
  transition: transform 0.2s;
  transform-origin: center;
}

.afw-modal-content iframe {
  width: 80vw;
  height: 80vh;
  max-width: 900px;
  border: none;
  border-radius: 8px;
  background: white;
  transition: transform 0.2s;
  transform-origin: center;
}

/* ========== NOTIFICATION POP-UP ========== */
.afw-notif {
  position: fixed;
  bottom: 100px;
  right: 24px;
  background: var(--afw-notif-bg);
  border: 1px solid var(--afw-border);
  border-radius: 14px;
  padding: 12px 14px;
  box-shadow: 0 4px 24px rgba(0,0,0,0.14);
  z-index: 99998;
  display: flex;
  align-items: center;
  gap: 10px;
  max-width: 300px;
  animation: afwSlideUp 0.35s ease;
  font-family: var(--afw-font);
}

.afw-notif-avatar {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  object-fit: cover;
}

.afw-notif-content { flex: 1; }
.afw-notif-content strong { font-size: 13px; color: var(--afw-text); }
.afw-notif-content p { font-size: 13px; color: var(--afw-text-secondary); line-height: 1.4; margin-top: 2px; }

.afw-notif-close {
  background: none;
  border: none;
  color: var(--afw-text-muted);
  cursor: pointer;
  font-size: 12px;
  padding: 4px;
  align-self: flex-start;
}

/* ========== SCROLLBAR ========== */
.afw-messages::-webkit-scrollbar,
.afw-welcome-body::-webkit-scrollbar { width: 5px; }
.afw-messages::-webkit-scrollbar-track,
.afw-welcome-body::-webkit-scrollbar-track { background: transparent; }
.afw-messages::-webkit-scrollbar-thumb,
.afw-welcome-body::-webkit-scrollbar-thumb { background: var(--afw-scrollbar); border-radius: 3px; }

/* ========== THEME TRANSITION ========== */
.afw-window,
.afw-brand-bar,
.afw-welcome-body,
.afw-chat,
.afw-messages,
.afw-input,
.afw-support-bar,
.afw-audio-bar,
.afw-emoji-picker,
.afw-tooltip,
.afw-notif,
.afw-msg-bubble,
.afw-topic,
.afw-input-group input,
.afw-welcome-footer,
.afw-footer,
.afw-theme-toggle {
  transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
}

/* Logo visibility controlled by theme class */
.afw-dark .afw-logo-light { display: none !important; }
.afw-dark .afw-logo-dark { display: block !important; }
.afw-logo-dark { display: none; }

/* ========== MOBILE ========== */
@media (max-width: 480px) {
  .afw-window {
    width: 100vw;
    height: 100vh;
    max-height: 100vh;
    bottom: 0;
    right: 0;
    border-radius: 0;
  }

  .afw-fab { bottom: 16px; right: 16px; width: 56px; height: 56px; }
  .afw-tooltip { right: 16px; bottom: 84px; }
  .afw-notif { right: 16px; bottom: 84px; }
}


/* ==================== PAINEL SUPORTE ==================== */
.afw-support-panel {
  display: flex;
  flex-direction: column;
  height: calc(100% - 48px);
  background: var(--afw-bg);
  overflow: hidden;
}

.afw-support-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 14px 18px;
  background: var(--afw-gradient);
  color: white;
}

.afw-support-header-info {
  display: flex;
  align-items: center;
  gap: 12px;
  min-width: 0;
  flex: 1;
}

.afw-support-avatar {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background: rgba(255,255,255,0.15);
  border: 2px solid rgba(255,255,255,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  flex-shrink: 0;
}

.afw-support-header h3 {
  margin: 0;
  font-size: 15px;
  font-weight: 600;
}

.afw-support-agent-name {
  font-size: 11px;
  opacity: 0.85;
  display: block;
}

.afw-support-header-actions {
  display: flex;
  gap: 4px;
  flex-shrink: 0;
  margin-left: 8px;
}

.afw-support-header-actions .afw-header-btn {
  color: white;
  background: rgba(255,255,255,0.15);
  border: none;
  border-radius: 50%;
  width: 32px;
  height: 32px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  transition: all 0.2s;
}

.afw-support-header-actions .afw-header-btn:hover {
  background: rgba(255,255,255,0.25);
}

.afw-support-body {
  flex: 1;
  overflow-y: auto;
  padding: 16px 18px;
  background: var(--afw-bg-alt);
}

.afw-support-stats {
  display: flex;
  gap: 12px;
  margin-bottom: 14px;
}

.afw-support-stat {
  flex: 1;
  background: var(--afw-bg);
  border: 1.5px solid var(--afw-border);
  border-radius: var(--afw-radius-sm);
  padding: 14px 12px;
  text-align: center;
  transition: all 0.2s;
}

.afw-support-stat:hover {
  border-color: var(--afw-primary);
  background: var(--afw-primary-light);
}

.afw-support-stat-num {
  display: block;
  font-size: 22px;
  font-weight: 700;
  color: var(--afw-primary);
  line-height: 1;
  margin-bottom: 4px;
}

.afw-support-stat-label {
  display: block;
  font-size: 10px;
  color: var(--afw-text-secondary);
  margin-top: 0;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.afw-support-queue {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.afw-support-empty {
  text-align: center;
  padding: 30px 24px;
  color: var(--afw-text-muted);
}

.afw-support-empty i {
  display: block;
  font-size: 34px;
  color: #4caf50;
  margin-bottom: 12px;
}

.afw-support-empty p {
  font-size: 14px;
  font-weight: 600;
  margin: 0 0 6px;
  color: var(--afw-text);
}

.afw-support-empty span {
  display: block;
  font-size: 12px;
  color: var(--afw-text-muted);
  line-height: 1.5;
  max-width: 220px;
  margin: 0 auto;
}

.afw-support-ticket {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 14px;
  background: var(--afw-bg);
  border: 1.5px solid var(--afw-border);
  border-radius: var(--afw-radius-sm);
  transition: all 0.2s;
  animation: afw-slideIn 0.3s ease;
}

.afw-support-ticket:hover {
  border-color: var(--afw-primary);
  background: var(--afw-primary-light);
}

.afw-support-ticket-info {
  display: flex;
  align-items: center;
  gap: 12px;
  flex: 1;
  min-width: 0;
}

.afw-support-ticket-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea, #764ba2);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 16px;
  flex-shrink: 0;
}

.afw-support-ticket-details {
  min-width: 0;
}

.afw-support-ticket-details strong {
  display: block;
  font-size: 14px;
  color: var(--afw-text);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.afw-support-ticket-details span {
  display: block;
  font-size: 12px;
  color: var(--afw-text-secondary);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.afw-support-ticket-details small {
  font-size: 11px;
  color: var(--afw-text-muted);
}

.afw-support-accept-btn {
  background: var(--afw-gradient);
  color: white;
  border: none;
  border-radius: var(--afw-radius-sm);
  padding: 8px 14px;
  font-size: 13px;
  font-weight: 600;
  cursor: pointer;
  font-family: var(--afw-font);
  display: flex;
  align-items: center;
  gap: 6px;
  white-space: nowrap;
  transition: all 0.2s;
}

.afw-support-accept-btn:hover {
  box-shadow: 0 4px 16px rgba(0,136,204,0.35);
  transform: translateY(-1px);
}

.afw-support-footer {
  padding: 8px 12px;
  border-top: 1px solid var(--afw-border);
  background: var(--afw-bg-alt);
  flex-shrink: 0;
}

.afw-support-back-btn {
  width: 100%;
  background: var(--afw-bg);
  border: 1.5px solid var(--afw-border);
  border-radius: var(--afw-radius-sm);
  padding: 10px;
  font-size: 14px;
  font-weight: 500;
  color: var(--afw-text-secondary);
  cursor: pointer;
  font-family: var(--afw-font);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  transition: all 0.2s;
}

.afw-support-back-btn:hover {
  border-color: var(--afw-primary);
  background: var(--afw-primary-light);
  color: var(--afw-primary-dark);
}

@keyframes afw-slideIn {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}
